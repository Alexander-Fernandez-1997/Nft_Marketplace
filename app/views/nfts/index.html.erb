<%= render 'shared/navbar' %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= render 'shared/flashes' %>
<% if @user.present?  %>
<%= render 'shared/datosuser' %>
<% end %>
<h1 class="text-center ">N.F.T. Marketplace</h1>
<section class="module-small">
  <div class="container">
    <div class="row">
      <div class="col-10">
        <%= form_tag nfts_path, method: :get do %>
        <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a nft" %>
      </div>
      <div class="col-2 mb-5">
        <%= submit_tag "Search", class: "btn btn-dark" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row multi-columns-row">
      <% @nfts.each do |nft|  %>
      <div class="col-sm-6 col-md-3 col-lg-3" data-aos="zoom-in-down" data-aos-easing="ease-out-cubic" data-aos-duration="2000" >
        <div class="shop-item">
          <div class="shop-item-image"><%= cl_image_tag nft.photo.key, height: 300, width: 400, crop: :fill, :cloud_name => "dh3mihvcm" %>
            <div class="shop-item-detail"><a class="btn btn-round btn-b"><span
                  class="icon-basket"><%= link_to 'More info', nft_path(nft), class: "btn btn-dark btn-lg" %></span>
            </div>
          </div>
          <h4 class="shop-item-title font-alt">
            <%= nft.name %>
          </h4>Price:<%= nft.price %>
        </div>
      </div>
      <% end  %>
    </div>
  </div>
</section>



<div class="footer fixed-bottom">
  <div>
    <% if @user.present?  %>
    <%= link_to 'Profile', user_path(@user), class: "btn btn-dark" %>
    <% end %>
    <%= link_to 'Users list',  users_path, class: "btn btn-dark" %>
    <%= link_to 'Create nft',  new_nft_path, class: "btn btn-dark" %>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Nft Marketplace
  </div>
</div>
