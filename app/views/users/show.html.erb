<%= render 'shared/navbar' %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= render 'shared/flashes' %>
<%= render 'shared/datosuser' %>

<h1 class= "text-center"><%= @user.username %></h1>
  <section class="module-small">
    <div class="container">
      <div class="row multi-columns-row">
      <% @user.nft.each do |nft|  %>
        <div class="col-sm-6 col-md-3 col-lg-3">
          <div class="shop-item">
            <div class="shop-item-image"><img src=" <%= nft.image_url %>" alt="NFT"/>
              <div class="shop-item-detail"><a class="btn btn-round btn-b"><span class="icon-basket"><%= link_to 'More info', nft_path(nft), class: "btn btn-dark btn-lg" %></span></div>
            </div>
            <h4 class="shop-item-title font-alt">
            <%= nft.name %>
            </h4>Price:<%= nft.price %>
          </div>
        </div>
        <% end  %>
      </div>
    </div>
    </section>

